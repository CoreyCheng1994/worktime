#!/usr/bin/env bash
set -euo pipefail

SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do
  DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
  SOURCE="$(readlink "$SOURCE")"
  [[ "$SOURCE" != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

"$REPO_ROOT/scripts/worktime" stop || true

cd "$REPO_ROOT"
pnpm install --frozen-lockfile
pnpm build

if [ -w "/usr/local/bin" ]; then
  ln -sf "$REPO_ROOT/scripts/worktime" /usr/local/bin/worktime
  echo "updated /usr/local/bin/worktime"
else
  echo "skip update /usr/local/bin/worktime (no permission)"
  echo "run manually: sudo ln -sf \"$REPO_ROOT/scripts/worktime\" /usr/local/bin/worktime"
fi

"$REPO_ROOT/scripts/worktime" start
